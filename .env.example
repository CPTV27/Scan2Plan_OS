# Scan2Plan OS - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database (automatically provided by Replit)
# DATABASE_URL=postgresql://user:password@host:port/database

# Google APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_CHAT_API_KEY=your_google_chat_api_key_here
GOOGLE_CHAT_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Airtable Integration
AIRTABLE_API_KEY=pat_your_airtable_api_key_here
AIRTABLE_BASE_ID=app_your_base_id_here

# QuickBooks OAuth
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REDIRECT_URI=https://your-app.replit.app/api/quickbooks/callback

# PandaDoc Integration
PANDADOC_API_KEY=your_pandadoc_api_key_here

# CPQ API Key (for external integrations calling INTO the CRM)
# This key is used to authenticate inbound API calls from external systems
# Pricing calculation is 100% client-side - this is NOT for outbound calls
CPQ_API_KEY=your_cpq_api_key_here

# Session Management
SESSION_SECRET=generate_a_secure_random_string_here

# Optional: GoHighLevel CRM
# GHL_API_KEY=your_ghl_api_key_here
# GHL_LOCATION_ID=your_ghl_location_id_here

# Optional: Perplexity AI
# PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: GitHub CI Integration (for triggering tests from Settings)
# Create a Personal Access Token with 'repo' and 'workflow' scopes
# GITHUB_TOKEN=ghp_your_github_pat_here

# X.com (Twitter) API Integration
# Get credentials at https://developer.x.com
# X_CLIENT_ID=your_x_client_id_here
# X_CLIENT_SECRET=your_x_client_secret_here
# X_CALLBACK_URL=https://your-app.replit.app/api/x/callback
